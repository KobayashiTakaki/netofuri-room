<div class="col-lg-8">
  <h4><%= @video.video_set.title %></h4>
  <% if @video.video_set.video_type == "show" %>
    シーズン<%= @video.season %>, 第<%= @video.episode %>話
  <% end %>
  <div class="mt-2">
    <%= form_for [@video, @scene], url: admin_video_scenes_path do |f| %>
      <div class="form-group">
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :start_time, "開始時間" %>
        <%= f.number_field :start_time, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :ent_time, "終了時間" %>
        <%= f.number_field :end_time, class: "form-control" %>
      </div>

      <%= button_tag "登録", type: "submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
